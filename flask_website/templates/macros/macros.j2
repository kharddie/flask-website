{% macro display_fields(field_name, placeholder_value, is_help_text, help_text) %}

   {% set _class = ' '.join(varargs) %}
    <div class="form-group {{'has-success has-feedback' if placeholder_value == False }}">
        {% if placeholder_value  %}
              {{ field_name.label }}
        {% endif %} 
        {{ field_name(class= _class, placeholder=placeholder_value|capitalize, **kwargs) }}
        {% if placeholder_value == False %}
              {{ field_name.label }}
        {% endif %} 

        {# ----Error reporting #}
        {% if field_name.errors %}
           <ul class=errors>
               {% for error in field_name.errors %}
                    <li>{{ error }}</li>
               {% endfor %}
           </ul>
        {% endif %}

        {% if is_help_text %}
            {% if help_text %}
              <small id="username-help" class="form-text text-muted">{{ help_text }}</small>
            {% endif %}
        {% endif %}
    </div>
{% endmacro %}


